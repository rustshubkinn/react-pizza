{
  "name": "react-pizza",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "eslint:check": "eslint src --ext .jsx --ext .js",
    "eslint:fix": "eslint src --ext .jsx --ext .js --fix",
    "prettier:check": "prettier --check \"src/**/*.{js,jsx,scss}\"",
    "prettier:fix": "prettier --check \"src/**/*.{js,jsx,scss}\"",
    "stylelint:check": "stylelint \"src/**/*.scss\"",
    "stylelint:fix": "stylelint \"src/**/*.scss\" --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "redux": "^4.1.1",
    "redux-thunk": "^2.3.0",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "prettier": "^2.3.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-order": "^4.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "import",
      "jsx-a11y",
      "react",
      "react-hooks"
    ],
    "extends": [
      "react-app",
      "react-app/jest",
      "eslint:recommended",
      "airbnb",
      "prettier"
    ],
    "rules": {
      "arrow-parens": 2,
      "brace-style": [
        2,
        "1tbs"
      ],
      "curly": [
        2,
        "all"
      ],
      "dot-location": [
        2,
        "property"
      ],
      "eol-last": 2,
      "jsx-quotes": [
        2,
        "prefer-double"
      ],
      "keyword-spacing": [
        2,
        {
          "after": true,
          "before": true
        }
      ],
      "max-len": 2,
      "space-before-blocks": 2,
      "no-lonely-if": 2,
      "no-trailing-spaces": 2,
      "no-multi-spaces": 2,
      "no-multiple-empty-lines": [
        2,
        {
          "max": 1
        }
      ],
      "semi": 2,
      "react/react-in-jsx-scope": 0,
      "react/function-component-definition": [
        2,
        {
          "namedComponents": "arrow-function",
          "unnamedComponents": "arrow-function"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ]
        }
      }
    }
  }
}
